<div class="read-screen">
  <div class="read-header">
    <div class="entry-info">
      <h1>Entry #<%= @entry.id %></h1>
      <div class="entry-meta">
        <span class="meta-author">&#128100; <%= @entry.author_name %></span>
        <span class="meta-date">&#128197; <%= @entry.entry_date %></span>
      </div>
    </div>
    <div class="read-actions">
      <a href="/entries/<%= @entry.id %>/edit" class="btn btn-edit" title="Edit Entry">
        &#9998; Edit
      </a>
      <form action="/entries/<%= @entry.id %>/delete" method="post" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this entry?');">
        <button type="submit" class="btn btn-delete" title="Delete Entry">
          &#128465; Delete
        </button>
      </form>
    </div>
  </div>
  
  <div class="read-content">
    <div class="journal-paper">
      <pre class="entry-text"><%= @entry.content %></pre>
    </div>
  </div>
  
  <div class="read-footer">
    <div class="timestamps">
      <span>Created: <%= @entry.created_at&.strftime('%Y-%m-%d %H:%M') %></span>
      <span>Updated: <%= @entry.updated_at&.strftime('%Y-%m-%d %H:%M') %></span>
    </div>
    <div class="footer-actions">
      <a href="/download/entry/<%= @entry.id %>" class="download-link">
        <span class="dl-icon">&#128190;</span>
        Download Entry
      </a>
    </div>
  </div>
</div>
